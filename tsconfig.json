{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": false,
        "outDir": "dist",
        "lib": [
            "es2015",
            "dom"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "rootDir": "./"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}